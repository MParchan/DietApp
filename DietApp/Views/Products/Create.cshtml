@model DietApp.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KcalPer100" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="KcalPer100" class="form-control" />
                    <span class="input-group-text"> kcal </span>
                </div>
                <span asp-validation-for="KcalPer100" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FatPer100" class="control-label"></label>
                <input asp-for="FatPer100" class="form-control" />
                <span asp-validation-for="FatPer100" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarboPer100" class="control-label"></label>
                <input asp-for="CarboPer100" class="form-control" />
                <span asp-validation-for="CarboPer100" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProteinPer100" class="control-label"></label>
                <input asp-for="ProteinPer100" class="form-control" />
                <span asp-validation-for="ProteinPer100" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" accept="image/*" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
