            </div>
            <div class="form-group">
                <label asp-for="TotalFat" class="control-label"></label>
                <input asp-for="TotalFat" class="form-control" />
                <span asp-validation-for="TotalFat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalCarbo" class="control-label"></label>
